{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build A32NX",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/dev-env/run.sh",
      "args": [
        "./scripts/setup.sh"
      ],
      "windows": {
        "command": "./scripts/dev-env/run.cmd",
        "args": [
          "./scripts/build_a32nx.sh"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build A32NX (no cache)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/dev-env/run.sh",
      "args": [
        "./scripts/setup.sh"
      ],
      "windows": {
        "command": "./scripts/dev-env/run.cmd",
        "args": [
          "./scripts/build_a32nx.sh --no-cache"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    }
  ]
}
